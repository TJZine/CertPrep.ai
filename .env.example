# ===========================================
# CertPrep.ai Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control
# ===========================================

# -------------------------------------------
# Supabase Configuration (Required)
# -------------------------------------------
# Find these in: Supabase Dashboard > Settings > API

NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here # Required for admin tasks (e.g., account deletion)

# -------------------------------------------
# Application Configuration
# -------------------------------------------

# Base URL for the application (used for callbacks, emails)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# -------------------------------------------
# Optional: Analytics
# -------------------------------------------

# NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# -------------------------------------------
# Security (Required for Signup)
# -------------------------------------------
# Default: hCaptcha Test Key (for local development)
# For Production: Replace with your real Site Key from dashboard.hcaptcha.com
NEXT_PUBLIC_HCAPTCHA_SITE_KEY=10000000-ffff-ffff-ffff-000000000001

# -------------------------------------------
# Optional: Feature Flags
# -------------------------------------------

# NEXT_PUBLIC_ENABLE_PROCTOR_MODE=true
# NEXT_PUBLIC_ENABLE_ANALYTICS=true
